<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/create_file_activity_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_file_activity_file_name"/>

        <EditText
            android:id="@+id/create_file_activity_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="@string/create_file_activity_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_file_activity_button_save" />

    </LinearLayout>

</LinearLayout>